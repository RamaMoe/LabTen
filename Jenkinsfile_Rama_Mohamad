pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                bat """
                    rem Create virtual environment if it does not exist
                    if not exist %VIRTUAL_ENV% (
                        py -m venv %VIRTUAL_ENV%
                    )

                    rem Install dependencies using the venv's python
                    %VIRTUAL_ENV%\\Scripts\\python -m pip install -r requirements.txt
                """
            }
        }

        stage('Lint') {
            steps {
                bat """
                    %VIRTUAL_ENV%\\Scripts\\python -m flake8 app.py
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                    %VIRTUAL_ENV%\\Scripts\\python -m pytest
                """
            }
        }

        stage('Deploy') {
            steps {
                bat """
                    %VIRTUAL_ENV%\\Scripts\\python app.py
                """
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
