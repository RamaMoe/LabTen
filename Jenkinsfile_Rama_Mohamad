pipeline {
    agent any
    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                bat """
                    rem === Create virtual environment if it does not exist ===
                    if not exist %VIRTUAL_ENV% (
                        python -m venv %VIRTUAL_ENV%
                    )

                    rem === Upgrade pip and install dependencies ===
                    %VIRTUAL_ENV%\\Scripts\\python -m pip install --upgrade pip
                    %VIRTUAL_ENV%\\Scripts\\python -m pip install -r requirements.txt
                """
            }
        }

        stage('Lint') {
            steps {
                bat """
                    %VIRTUAL_ENV%\\Scripts\\python -m flake8 app.py
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                    %VIRTUAL_ENV%\\Scripts\\pytest --maxfail=1 --disable-warnings -q
                """
            }
        }

        stage('Coverage') {
            steps {
                bat """
                    rem === Run tests with coverage ===
                    %VIRTUAL_ENV%\\Scripts\\coverage run -m pytest
                    %VIRTUAL_ENV%\\Scripts\\coverage report
                """
            }
        }

        stage('Security Scan') {
            steps {
                bat """
                    rem === Run Bandit for security scanning ===
                    %VIRTUAL_ENV%\\Scripts\\bandit -r .
                """
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                // You can add real deployment steps here if required (e.g. copy to server)
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
