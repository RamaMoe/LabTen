pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                bat """
                    if not exist %VIRTUAL_ENV% (
                        python -m venv %VIRTUAL_ENV%
                    )
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    pip install -r requirements.txt
                """
            }
        }

        stage('Lint') {
            steps {
                bat """
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    flake8 app.py
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    pytest
                """
            }
        }

        stage('Deploy') {
            steps {
                bat """
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    python app.py
                """
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
